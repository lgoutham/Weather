<resources>

    <!-- Base application theme. -->
    <style name="WeatherTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="WeatherTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WeatherTheme.MainActivityStyle" parent="WeatherTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Sunshine.Home.NoTitle</item>
    </style>

    <style name="WeatherTheme.SettingsActivityStyle" parent="WeatherTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Sunshine.Settings.NoTitle</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Sunshine.Home.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <style name="ActionBar.Solid.Sunshine.Settings.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo</item>
        <item name="logo">@drawable/sun</item>
    </style>

</resources>
