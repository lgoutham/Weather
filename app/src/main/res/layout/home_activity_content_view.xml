<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_activity_content_coordinatorLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        style="@style/Theme.AppCompat.Light.DarkActionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_default_dimen_300px">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:id="@+id/home_activity_content_progressbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/home_activity_present_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1"
                app:layout_collapseMode="parallax">

                <RelativeLayout
                    android:id="@+id/home_activity_date_temp_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/global_default_dimen_30px"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/home_activity_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:layout_marginTop="@dimen/global_default_dimen_10px"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/global_default_text_25px" />

                    <TextView
                        android:id="@+id/home_activity_temp_max"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/app_name"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/global_default_text_41px" />

                    <TextView
                        android:id="@+id/home_activity_temp_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/home_activity_temp_max"
                        android:layout_marginTop="@dimen/global_default_dimen_10px"
                        android:layout_marginBottom="@dimen/global_default_dimen_10px"
                        android:text="@string/app_name"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/global_default_text_30px" />

                    <TextView
                        android:id="@+id/home_activity_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/global_default_dimen_10px"
                        android:layout_marginBottom="@dimen/global_default_dimen_10px"
                        android:text="@string/app_name"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/global_default_text_30px" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/global_default_dimen_20px"
                    android:layout_marginEnd="@dimen/global_default_dimen_20px"
                    android:layout_weight="0.5">

                    <ImageView
                        android:id="@+id/home_activity_image_view"
                        android:layout_width="@dimen/global_default_dimen_200px"
                        android:layout_height="@dimen/global_default_dimen_200px"
                        android:layout_marginBottom="@dimen/global_default_dimen_20px"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:contentDescription="@string/image_description"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/home_activity_sky_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/home_activity_image_view"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/global_default_dimen_10px"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/global_default_text_25px" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_activity_content_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</android.support.design.widget.CoordinatorLayout>